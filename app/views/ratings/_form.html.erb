<div class="row">
  <div class="col-md-6">

    <h1> New Rating </h1>
    <br>

    <%= form_for([@guide, @guide.ratings.build]) do |f| %>
    <%= f.label "Rating (5 being best):" %>
    <%= f.select :value, (1..5) %>
    <%= f.label "Comment" %>
    <br><br>
    <%= f.text_area :comment %>
    <br>
    <%= f.submit "Submit Rating" %>
    <% end %>

  </div>

  <div class="col-md-6">

    <%= image_tag "kid.jpg", size: "456x684" %>

  </div>

</div>
